<div class="calendar-container">
  <%= month_calendar(events: @meetings, end_attribute: :end_time, start_date: (Date.today + 1.week)) do |date, meetings| %>
    <%= date %>

    <% meetings.each do |meeting| %>
      <div class="meeting <%= 'multi-days' if meeting.multi_days? %>">
        <p><%= meeting.name %></p>
        <small><%= meeting.time if !meeting.multi_days? %></small>
      </div>
    <% end %>
  <% end %>
</div>
